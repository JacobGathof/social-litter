<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Group Name:"/>

    <EditText android:id="@+id/add_group_name" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:hint="Group Name"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Group Description:"/>

    <EditText android:id="@+id/add_group_desc" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:hint="Group Description"/>



</LinearLayout>